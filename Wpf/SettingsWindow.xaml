<wpf:MetroWindow x:Class="Wpf.SettingsWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:system="clr-namespace:System;assembly=mscorlib"
                 xmlns:wpf="clr-namespace:Wpf"
                 mc:Ignorable="d"
                 Title="Settings"
                 SizeToContent="WidthAndHeight"
                 WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="24" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="24" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="FrameworkElement"
                   x:Key="VerticalCenterAlignedElement">
                <Setter Property="VerticalAlignment"
                        Value="Center" />
            </Style>
            <Style TargetType="Button"
                   BasedOn="{StaticResource VerticalCenterAlignedElement}" />
            <Style TargetType="TextBlock"
                   BasedOn="{StaticResource VerticalCenterAlignedElement}" />
            <Style TargetType="TextBlock"
                   x:Key="SectionHeader">
                <Setter Property="FontSize"
                        Value="16" />
                <Setter Property="FontWeight"
                        Value="SemiBold" />
            </Style>
            <Style TargetType="CheckBox"
                   BasedOn="{StaticResource VerticalCenterAlignedElement}" />
        </Grid.Resources>
        <Grid>
            <Grid.Resources>
                <Style TargetType="Button">
                    <EventSetter Event="Click"
                                 Handler="OnColorButtonClick" />
                    <Setter Property="Width"
                            Value="32" />
                    <Setter Property="Height"
                            Value="32" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <TextBlock Text="Colors"
                       Style="{StaticResource SectionHeader}" />
            <TextBlock Text="Critical"
                       Grid.Row="1"
                       Grid.Column="0" />
            <TextBlock Text="Low"
                       Grid.Row="2"
                       Grid.Column="0" />
            <TextBlock Text="Charging"
                       Grid.Row="3"
                       Grid.Column="0" />
            <Button Grid.Row="1"
                    Grid.Column="1"
                    x:Name="CriticalColor"
                    x:FieldModifier="private" />
            <Button Grid.Row="2"
                    Grid.Column="1"
                    x:Name="LowColor"
                    x:FieldModifier="private" />
            <Button Grid.Row="3"
                    Grid.Column="1"
                    x:Name="ChargingColor"
                    x:FieldModifier="private" />
        </Grid>
        <Rectangle Grid.Row="0"
                   Grid.Column="1"
                   Width="1"
                   Fill="LightGray" />
        <Grid Grid.Column="2"
              Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Text="Notifications"
                       Style="{StaticResource SectionHeader}"
                       Grid.ColumnSpan="2" />
            <CheckBox Content="Critical"
                      Grid.Row="1"
                      Grid.Column="0"
                      x:Name="CriticalNotification"
                      x:FieldModifier="private" />
            <CheckBox Content="Low"
                      Grid.Row="2"
                      Grid.Column="0"
                      x:Name="LowNotification"
                      x:FieldModifier="private" />
            <CheckBox Content="High:"
                      Grid.Row="3"
                      Grid.Column="0"
                      x:Name="HighNotification"
                      x:FieldModifier="private" />
            <CheckBox Content="Full"
                      Grid.Row="4"
                      Grid.Column="0"
                      x:Name="FullNotification"
                      x:FieldModifier="private" />
            <ComboBox Grid.Column="1"
                      Grid.Row="3"
                      SelectedIndex="0"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      x:Name="HighNotificationValue"
                      x:FieldModifier="private">
                <system:Int32>80</system:Int32>
                <system:Int32>70</system:Int32>
                <system:Int32>60</system:Int32>
                <system:Int32>50</system:Int32>
            </ComboBox>
        </Grid>
        <Rectangle Grid.ColumnSpan="3"
                   Grid.Column="0"
                   Grid.Row="1"
                   Height="1"
                   Fill="LightGray" />
        <TextBlock Grid.Column="0"
                   Grid.Row="2"
                   Grid.ColumnSpan="3">
            <Run BaselineAlignment="Center">Refresh every</Run>
            <ComboBox SelectedIndex="0"
                      x:Name="RefreshSeconds"
                      x:FieldModifier="private">
                <system:Int32>10</system:Int32>
                <system:Int32>30</system:Int32>
                <system:Int32>60</system:Int32>
            </ComboBox>
            <Run BaselineAlignment="Center">seconds</Run>
        </TextBlock>
        <CheckBox Content="Start with Windows"
                  Grid.ColumnSpan="3"
                  Grid.Column="0"
                  Grid.Row="3"
                  x:Name="AutoStart"
                  IsEnabled="False"
                  x:FieldModifier="private" />
        <TextBlock Grid.Column="0"
                   Grid.Row="4"
                   HorizontalAlignment="Left">
            <Hyperlink Click="OnResetButtonClick"
                       TextDecorations="None">
                Reset all settings
            </Hyperlink>
        </TextBlock>
        <TextBlock Grid.Row="4"
                   Grid.Column="2"
                   HorizontalAlignment="Right">
            <Hyperlink TextDecorations="None"
                       Click="Hyperlink_OnClick">
                Rate this app
            </Hyperlink>
        </TextBlock>
    </Grid>
</wpf:MetroWindow>